@model TiendaApp.DTOs.ArticuloDTO

@{
    ViewData["Title"] = "Crear Artículo";
}

<div class="container mt-5">
    <div class="card" style="max-width: 600px; margin: auto;">
        <div class="card-header bg-success text-white" style="background-color:#198754 !important;">
            <h4>➕ Registrar Nuevo Artículo</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div class="mb-3">
                    <label class="form-label">Descripción del Producto</label>
                    <input asp-for="Descripcion" class="form-control" placeholder="Ej: Coca Cola 2L" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Precio ($)</label>
                    <input asp-for="Precio" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Stock Inicial</label>
                    <input asp-for="Stock" class="form-control" type="number" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success">Guardar en Base de Datos</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>